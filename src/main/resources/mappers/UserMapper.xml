<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.project.footballkorea.files.dao.userDAO">
 
 	<insert id="insertUser" parameterType="map">
 		
 		INSERT INTO `user`
 		(
 			`loginId`
 			, `password`
 			, `name`
 			, `nickname`
 			, `phoneNumber`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUE
 		(
 			#{loginId}
 			, #{password}
 			, #{name}
 			, #{nickname}
 			, #{phoneNumber}
 			, now()
 			, now()
 		)
 		
 	</insert>
 	
 	<select id="signupDuplicatedDAO" resultType="int">
 	
 		SELECT
 			COUNT(*)
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 	
 	
 	</select>
 
 	<select id="getUserDAO" resultType="com.project.footballkorea.files.model.User">
 	
 		SELECT
 			`id`
 			, `loginId`
 			, `password`
 			, `name`
 			, `nickname`
 			, `phoneNumber`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId} AND `password` = #{password}
 	

 	</select>
 
 
 
 
 
 
 
 
 
 
</mapper>